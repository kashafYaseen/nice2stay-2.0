<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<div class="column text-right next">
  <% if current_page.last? %>
    <a class='btn btn-outline-secondary btn-sm next-page m-0 disabled'><%= t('views.pagination.next').html_safe %></a>
  <% else %>
    <%= link_to t('views.pagination.next').html_safe, url, rel: 'next', remote: remote, class: 'btn btn-outline-secondary btn-sm next-page m-0' %>
  <% end %>
</div>
