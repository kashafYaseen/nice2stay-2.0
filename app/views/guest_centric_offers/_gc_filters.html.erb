<% if guest_centric.present? && guest_centric['response'].present? %>
  <% guest_centric['response']['hotels'].each do |hotel| %>
    <% if hotel['offers'].present? %>
      <div class="mt-4 p-0 col-md-12">
        <h4 class="filter-title">Filters</h4>
        <% hotel['offers'].each_with_index do |child, index| %>
          <% if child['isPromotion'] %>
          <% promotion = @lodging.gc_offers.find_by(offer_id: child['packageId']) %>

            <button class="btn btn-secondary btn-sm btn-offer-filter" data-offer="<%= child['promotionId'] %>"><%= "#{promotion.try(:name) || child['name']} (#{child['offers'].try(:count)})" %></button>
          <% end %>
        <% end %>
      </div>
    <% end %>
  <% end %>
<% end %>
