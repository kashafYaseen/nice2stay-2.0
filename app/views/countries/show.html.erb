<% if @homepage_campaigns.present? %>
  <section class="container padding-top-3x pb-5">
    <h2 class="text-center mb-30">Our collection in <%= @country.name %></h2>

    <div class="isotope-grid cols-2">
      <div class="gutter-sizer"></div>
      <div class="grid-sizer"></div>

      <% @homepage_campaigns.each do |campaign| %>
        <div class="grid-item gallery-item">
          <%= link_to campaign.url do %>
            <%= image_tag campaign.image if campaign.image.present? %>
            <h2 class="image-title-box"><%= campaign.title %></h2>
          <% end %>

          <span class="caption"><%= campaign.description.html_safe %></span>
        </div>
      <% end %>
    </div>
  </section>
<% end %>

<% if @all_reviews.present? %>
  <div class="leads_homepage">
    <section class="container padding-top-3x pb-5">
       <h2 class="text-center mb-30">Rating & Latest Customer Reviews</h2>
      <div class="row mt-30">
        <div class="col-md-4 mb-4">
          <%= render 'reviews/average_rating', reviews: @all_reviews %>
        </div>

        <div class="col-md-8">
          <div class="reviews-container">
            <%= render @reviews %>
          </div>

          <div class="homepage-review-paginator">
            <%= paginate @reviews, remote: true %>
          </div>
        </div>
      </div>
    </section>
  </div>
<% end %>

