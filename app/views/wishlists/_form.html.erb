<%= form_for lodging.wishlists.build, url: new_wishlists_path, method: :get, remote: true, html: { id: "new_wishlist_#{lodging.id}#{id_sufix}" } do |f| %>
  <%= f.hidden_field :check_in, id: "wishlist_check_in_#{lodging.id}#{id_sufix}", class: 'check_in' %>
  <%= f.hidden_field :check_out, id: "wishlist_check_out_#{lodging.id}#{id_sufix}", class: 'check_out' %>
  <%= f.hidden_field :adults, id: "wishlist_adults_#{lodging.id}#{id_sufix}", class: 'adults' %>
  <%= f.hidden_field :children, id: "wishlist_children_#{lodging.id}#{id_sufix}", class: 'children' %>
  <%= f.hidden_field :lodging_id, value: lodging.id, id: "wishlist_lodging_id_#{lodging.id}#{id_sufix}" %>

  <%= f.button :submit, class: "btn btn-outline-secondary btn-sm text-danger ml-0 form-control #{'col-md-6 float-right mr-0' if lodging.as_standalone?}" do %>
    <i class="material-icons favorite_border"></i>&nbsp;Favorite
  <% end %>
<% end %>
