<%= form_for lodging.wishlists.build, remote: true do |f| %>
  <%= f.hidden_field :check_in %>
  <%= f.hidden_field :check_out %>
  <%= f.hidden_field :adults %>
  <%= f.hidden_field :children %>
  <%= f.hidden_field :lodging_id, value: lodging.id %>

  <%= f.button :submit, class: "btn btn-outline-secondary btn-sm text-danger form-control" do %>
    <i class="material-icons favorite_border"></i>&nbsp;Save To Wishlist
  <% end %>
<% end %>
