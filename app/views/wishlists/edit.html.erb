<div class="container padding-bottom-3x mb-2">
  <div class="row mt-5">
    <div class="col-lg-12">
      <h4>Wish Lists</h4>
      <%= form_for :wishlist, url: wishlists_en_path, method: :put do %>
        <div class="row">
          <div class="col-md-1">Lodgings</div>
          <div class="col-md-2">Name</div>
          <div class="col-md-2">Check in</div>
          <div class="col-md-2">Check out</div>
          <div class="col-md-1">Adults</div>
          <div class="col-md-1">Children</div>
          <div class="col-md-2">Notes</div>
        </div>

        <% @wishlists.each do |wishlist| %>
          <%= fields_for "wishlist[]", wishlist do |f| %>
            <div class="row">
              <div class="col-md-1">
                <%= image_tag wishlist.lodging_image, class: 'product-thumb' %>
              </div>

              <div class="col-md-2">
                <%= f.text_field :name, class: 'form-control' %>
              </div>

              <div class="col-md-2">
                <%= f.text_field :check_in, class: 'form-control' %>
              </div>

              <div class="col-md-2">
                <%= f.text_field :check_out, class: 'form-control' %>
              </div>

              <div class="col-md-1">
                <%= f.number_field :adults, class: 'form-control' %>
              </div>

              <div class="col-md-1">
                <%= f.number_field :children, class: 'form-control' %>
              </div>

              <div class="col-md-3">
                <%= f.text_area :notes, class: 'form-control', rows: 1 %>
              </div>
            </div>
          <% end %>
        <% end %>

        <%= submit_tag 'Update', class: "btn btn-primary float-right" %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <h4>Personal Details</h4>
      <hr class="padding-bottom-1x">
      <%= form_for @user, url: wishlists_en_path, method: :put do |f| %>
        <%= render 'shared/errors', resource: @user %>

        <fieldset <%= 'disabled' if user_signed_in? %>>
          <div class="row">
            <div class="col-sm-6">
              <div class="form-group">
                <%= f.label :first_name %>
                <%= f.text_field :first_name, class: "form-control" %>
              </div>
            </div>

            <div class="col-sm-6">
              <div class="form-group">
                <%= f.label :last_name %>
                <%= f.text_field :last_name, class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-sm-6">
              <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, class: "form-control disabled" %>
              </div>
            </div>
          </div>
        </fieldset>

        <% if user_signed_in? %>
          <hr class="padding-bottom-1x">
        <% else %>
          <div class="row password-fields d-none">
            <div class="col-sm-6">
              <div class="form-group">
                <%= f.label :password %>
                <%= f.password_field :password, class: "form-control" %>
              </div>
            </div>

            <div class="col-sm-6">
              <div class="form-group">
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, class: "form-control" %>
              </div>
            </div>
          </div>
          <hr class="padding-bottom-1x">

          <div class="form-group">
            <div class="custom-control custom-checkbox">
              <%= check_box_tag :create_account, nil, show_password_fields?(@user), class: "custom-control-input" %>
              <label class="custom-control-label" for="create_account">Do you want to create an account?</label>
            </div>
          </div>
        <% end %>

        <div class="d-flex justify-content-between">
          <%= link_to 'Back To Wishlist', wishlists_en_path, class: "btn btn-outline-secondary m-0" %>
          <%= f.submit 'Checkout', class: "btn btn-success m-0" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<% content_for :js_init do %>
  Cart.init();
<% end %>
