<% if reservations.present? %>
  <% reservations.each do |reservation| %>
    <tr>
      <td>
        <div class="product-item">
          <%= link_to reservation.lodging, class: 'product-thumb' do %>
            <%= image_tag reservation.lodging_image if reservation.lodging_image.present? %>
          <% end %>

          <div class="product-info">
            <h4 class="product-title">
              <%= link_to reservation.lodging_name, reservation.lodging %>
            </h4>
            <span><em>Price:</em> $<%= reservation.total_price %></span>
            <span><em>Nights:</em><%= reservation.total_nights %></span>
            <span><em>From:</em> <%= reservation.check_in %></span>
            <span><em>To:</em> <%= reservation.check_out %></span>
            <span><em>Guests:</em> <%= reservation.adults.to_i + reservation.children.to_i %></span>
          </div>
        </div>
      </td>

      <td class="text-center">
        <%= link_to remove_carts_path(reservation_id: reservation), class: 'remove-from-cart', remote: true do %>
          <i class="material-icons">close</i>
        <% end %>
      </td>
    </tr>
  <% end %>
<% else %>
  <tr>
    <td>Cart is empty.</td>
  </tr>
<% end %>
