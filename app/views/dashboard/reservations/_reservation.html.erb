<tr>
  <td class="align-middle">
    <a class="text-medium navi-link" href="#" data-toggle="modal" data-target="#payment-modal-<%= reservation.id %>">
      <%= reservation.id %>
    </a>
  </td>

  <td class="align-middle"><%= link_to reservation.lodging_name, reservation.lodging %></td>
  <td class="align-middle"><%= render_date reservation.created_at %></td>

  <td class="align-middle">
    <a class="btn btn-primary btn-sm" href="#" data-toggle="modal" data-target="#payment-modal-<%= reservation.id %>">PAY NOW</a>
  </td>

  <td class="align-middle">
    <%= render_reservation_type reservation.booking_status %>
  </td>

  <td class="align-middle"><span class="text-medium">$<%= render_rounded_price reservation.total_price %></span></td>
</tr>

<%= render 'payment_details_modal', reservation: reservation %>
