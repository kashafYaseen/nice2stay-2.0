<tr>
  <td class="align-middle">
    <%= link_to reservation.identifier, dashboard_booking_path(reservation.booking_id), class: 'text-medium nav-link' %>
  </td>

  <td class="align-middle"><%= link_to reservation.lodging_child_name, reservation.lodging %></td>

  <td class="align-middle">
    <%= render_date reservation.created_at + 2.days %>
  </td>


  <td class="align-middle"><span class="text-medium"><%= render_rounded_price (reservation.rent.to_f + reservation.cleaning_cost.to_f - reservation.discount.to_f) %></span></td>

  <td class="align-middle">
    <%= link_to 'BOOK NOW', accept_option_dashboard_reservation_path(reservation) %>
    <%= link_to 'REMOVE', dashboard_reservation_path(reservation), class: 'text-danger', method: :delete %>
  </td>
</tr>
