<div class="card border-dark text-center mb-3">
  <div class="card-body">
    <h4 class="card-title homepage pt-3 pb-3">Bookings & Option Requests</h4>
    <div class="table-responsive text-xxs">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Reference #</th>
            <th>Lodging</th>
            <th>Created At</th>
            <th>Request</th>
            <th>Booking</th>
            <th>Type</th>
            <th>Price</th>
          </tr>
        </thead>

        <tbody id="requests-table-body">
          <% if @requests.present? %>
            <%= render partial: 'request', collection: @requests, as: :reservation %>
          <% else %>
            <tr><td colspan="5" class="text-center">No Request found!</td></tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div id="requests-pagination">
      <%= paginate @requests, param_name: :requests_page, window: 2, remote: true %>
    </div>
  </div>
</div>

