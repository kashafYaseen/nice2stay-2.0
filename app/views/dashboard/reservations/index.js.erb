<% if @old_bookings.present? %>
  $('#old-bookings-table-body').html("<%= j render  @old_bookings %>");
  $('#old-bookings-pagination').html("<%= j paginate @old_bookings, param_name: :old_bookings_page, window: 2, remote: true %>");
<% end %>

<% if @upcoming_bookings.present? %>
  $('#upcoming-bookings-table-body').html("<%= j render  @upcoming_bookings %>");
  $('#upcoming-bookings-pagination').html("<%= j paginate @upcoming_bookings, param_name: :upcoming_bookings_page, window: 2, remote: true %>");
<% end %>

<% if @requests.present? %>
  $('#requests-table-body').html("<%= j render partial: 'request', collection: @requests, as: :reservation %>");
  $('#requests-pagination').html("<%= j paginate @requests, param_name: :requests_page, window: 2, remote: true %>");
<% end %>

<% if @options.present? %>
  $('#options-table-body').html("<%= j render partial: 'option', collection: @options, as: :reservation %>");
  $('#options-pagination').html("<%= j paginate @options, param_name: :requests_page, window: 2, remote: true %>");
<% end %>
