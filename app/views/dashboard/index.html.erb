<div class="card border-dark text-center mb-3">
  <div class="card-body">
    <h4 class="card-title homepage pt-3 pb-3">Dashboard</h4>
    <div class="row">
      <div class="col-md-4">
        <div class="bg-white text-left">
          <h5 class="card-title pt-3 pb-3"><%= t 'profile.name' %></h5>
          <p class="m-0"><%= t 'carts.full_name' %>: <%= current_user.full_name.humanize %></p>
          <p class="m-0"><%= t 'carts.email' %>: <%= current_user.email %></p>
          <p class="m-0"><%= t 'carts.phone' %>: <%= current_user.phone %></p>
          <p class="m-0"><%= t 'carts.city' %>: <%= current_user.city %></p>
          <p class="m-0"><%= t 'carts.country' %>: <%= current_user.country_name %></p>
          <p class="m-0"><%= link_to "edit", edit_user_registration_path %></p>
        </div>
      </div>

      <div class="col-md-8">
        <h5 class="card-title text-left pt-3 pb-3"><%= t 'profile.messages' %></h5>
        <% if current_user.errors.any? %>
          <p class="text-left text-danger m-0">Please Update Your Profile </p>
          <%= render 'reservations/errors', resource: current_user, classes: 'text-left' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div id="booking-details"></div>
<%#= render partial: 'dashboard/bookings/details_modal', collection: @bookings, as: :booking %>
