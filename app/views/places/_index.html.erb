<table class="table table-bordered">
  <tbody>
    <% if grouped_places.present? %>
      <% grouped_places.each do |category, places| %>
        <tr><th style="color: <%= category.color_code %>"><b><%= category.name %></b></th></tr>
        <% places.each do |place| %>
          <tr>
            <td>
              <a data-toggle="modal" class="cursor-pointer no-decoration" data-target="#place-details-modal-<%= place.id %>"><%= place.name %></a>
              <span class="float-right"><%= place.distance_from lodging %> km</span>
            </td>
          </tr>

          <%= render 'places/modal', place: place %>
        <% end %>
      <% end %>
    <% else %>
      <tr><td>No place found!</td></tr>
    <% end %>
  </tbody>
</table>
