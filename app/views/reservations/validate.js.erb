<% if @reservation.validate %>
  $('.btn-booking-<%= @reservation.lodging_id %>').removeClass('disabled');
<% else %>
  $('.btn-booking-<%= @reservation.lodging_id %>').addClass('disabled');
<% end %>

$('.reservation-form-errors-<%= @reservation.lodging_id %>').html("<%= j render 'reservations/errors', resource: @reservation %>");
