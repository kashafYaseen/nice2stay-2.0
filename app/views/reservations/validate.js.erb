<% if @reservation.validate %>
  $('#cart-<%= @reservation.lodging_id %>, #cart-<%= @reservation.lodging_id %>_modal').removeClass('disabled');
  $("#reservation-footer-btn-<%= @reservation.lodging_id %>, #reservation-footer-btn-<%= @reservation.lodging_id %>_modal").removeClass('d-none');
<% else %>
  $("#reservation-footer-btn-<%= @reservation.lodging_id %>, #reservation-footer-btn-<%= @reservation.lodging_id %>_modal").addClass('d-none');
  $('#cart-<%= @reservation.lodging_id %>, #cart-<%= @reservation.lodging_id %>_modal').addClass('disabled');
<% end %>

$('.reservation-form-errors-<%= @reservation.lodging_id %>').html("<%= j render 'errors', resource: @reservation, classes: nil %>");
