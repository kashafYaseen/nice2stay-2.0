<div class="card border-default bg-white pt-2 box-shadow">
  <div class="persisted-data" data-check-in="<%= params[:check_in]%>"
       data-check-out="<%= params[:check_out]%>"
       data-url="<%= price_details_lodging_path(lodging) %>"
       data-validate-url="<%= validate_reservations_path %>"></div>

  <div class="card-body">
    <div class="reservation-form-errors-<%= lodging.id %>">
      <%= render 'reservations/errors', resource: reservation %>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div class="dropdown guests-dropdown">
          <button class="btn btn-outline-primary dropdown-toggle btn-sm" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="title">Guest</span>
          </button>

          <%= form_for reservation, url: reservations_path, remote: true do |f| %>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <div class="dropdown-item">
                <label>Adults</label>
                <%= f.number_field :adults, value: no_of_adults(f.object.adults), min: 1, class: 'input-spinner adults' %>
              </div>

              <div class="dropdown-item">
                <label>Children</label>
                <%= f.number_field :children, value: f.object.children, min: 0, class: 'input-spinner children' %>
              </div>

              <div class="dropdown-item">
                <label>Infants</label>
                <%= f.number_field :infants, value: f.object.infants, min: 0, class: 'input-spinner infants' %>
              </div>

              <%= f.hidden_field :lodging_id, value: lodging.id %>
              <%= hidden_field_tag "calculate_bill", true %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="col-md-12" data-lodging-id="<%= lodging.id %>"
           data-disabled-dates="<%= lodging.children_not_available_on %>">
        <div class="reservation-datepicker"></div>
      </div>

      <div class="col-md-12">
        <%= link_to 'Check Availability', '', class: "btn btn-primary btn-sm btn-calculate-bill w-100", data: { lodging_ids: lodging.lodging_children.try(:ids) } %>
      </div>
    </div>
  </div>
</div>
