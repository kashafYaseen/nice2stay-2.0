<div class="card border-default bg-white pt-2 box-shadow">
  <div class="persisted-data" data-check-in="<%= params[:check_in]%>"
       data-check-out="<%= params[:check_out]%>"
       data-url="<%= price_details_lodging_path(lodging) %>"
       data-validate-url="<%= validate_reservations_path %>"></div>

  <div class="card-body">
    <h2 class="mb-3"><%= lodging.title %></h2>
    <p class="text-sm text-muted"><%= lodging.subtitle %></p>

    <div class="reservation-form-errors-<%= lodging.id %>">
      <%= render 'shared/errors', resource: lodging.reservations.build %>
    </div>

    <div id="lodging-url-<%= lodging.id %>"></div>

    <%= form_for lodging.reservations.build, remote: true do |f| %>
      <div class="row">
        <div class="col-sm" id="lodging-url-<%= lodging.id %>"
             data-disabled-dates="<%= lodging.not_available_on %>"
             data-flag-id="#calculate_bill_<%= lodging.id %>">
          <div class='reservation-datepicker'></div>
        </div>

        <div class="col-sm">
          <p id="lbl-error-<%= lodging.id %>"></p>

          <label>Adults</label>
          <%= f.number_field :adults, value: no_of_adults(f.object.adults), min: 1, class: 'input-spinner' %>

          <label>Children</label>
          <%= f.number_field :children, value: f.object.children, min: 0, class: 'input-spinner' %>

          <label>Infants</label>
          <%= f.number_field :infants, value: f.object.infants, min: 0, class: 'input-spinner' %>
          <br>

          <% [:prebooking, :option].each do |status| %>
            <%= f.radio_button :booking_status, status %>
            <label><%= status %></label><br>
          <% end %>

          <br>
          <%= f.hidden_field :lodging_id, value: lodging.id %>
          <%= hidden_field_tag "calculate_bill_#{lodging.id}", true %>
          <br>
          <br>
          <h5 class="text-normal" id="bill-<%= lodging.id %>"></h5>
        </div>
      </div>
      <%= f.submit 'Add', class: "btn btn-primary col-md-12 btn-booking-#{ lodging.id} disabled" %>
    <% end %>
  </div>

  <a class="btn btn-outline-secondary btn-sm text-danger" href="#"><i class="material-icons favorite_border"></i>&nbsp;Save To Wishlist</a>
</div>
