<div class="card border-default bg-white pt-2 box-shadow">
  <div class="persisted-data" data-check-in="<%= params[:check_in]%>"
       data-check-out="<%= params[:check_out]%>"
       data-url="<%= price_details_lodging_path(lodging) %>"
       data-validate-url="<%= validate_reservations_path %>"></div>

  <div class="card-body">
    <h2 class="mb-3"><%= lodging.title %></h2>
    <p class="text-sm text-muted"><%= lodging.subtitle %></p>

    <div class="reservation-form-errors-<%= lodging.id %>">
      <%= render 'reservations/errors', resource: reservation %>
    </div>

    <div class="row">
      <div class="col-md-7" data-lodging-id="<%= lodging.id %>"
           data-disabled-dates="<%= lodging.childs_not_available_on %>">
        <div class='reservation-datepicker'></div>
      </div>

      <div class="col-md-5">
        <%= form_for reservation, url: reservations_path, remote: true do |f| %>
          <p id="lbl-error"></p>

          <%= f.hidden_field :check_in, id: "check_in_#{lodging.id}", class: 'check_in' %>
          <%= f.hidden_field :check_out, id: "check_out_#{lodging.id}", class: 'check_out' %>

          <label>Adults</label>
          <%= f.number_field :adults, value: no_of_adults(f.object.adults), min: 1, class: 'input-spinner', id: "adults_#{lodging.id}" %>

          <label>Children</label>
          <%= f.number_field :children, value: f.object.children, min: 0, class: 'input-spinner', id: "children_#{lodging.id}" %>

          <label>Infants</label>
          <%= f.number_field :infants, value: f.object.infants, min: 0, class: 'input-spinner', id: "infants_#{lodging.id}" %>
          <br>

          <br>
          <%= f.hidden_field :lodging_id, value: lodging.id %>
          <%= hidden_field_tag "calculate_bill", true %>
          <br>

          <% [:prebooking, :option].each do |status| %>
            <%= f.radio_button :booking_status, status, id: "booking_status_#{status}_#{lodging.id}" %>
            <label><%= status %></label><br>
          <% end %>

          <h5 class="text-normal" id="bill-<%= lodging.id %>"></h5>

          <%= link_to 'Check Availability', '', class: "btn btn-primary col-md-12 btn-calculate-bill", data: { lodging_id: lodging.id } %>
          <%= f.submit 'Add to Cart', class: "btn btn-primary col-md-12 btn-booking disabled", id: "cart-#{lodging.id}" %>
        <% end %>

        <%= render 'wishlists/form', lodging: lodging %>
      </div>
    </div>
  </div>
</div>
