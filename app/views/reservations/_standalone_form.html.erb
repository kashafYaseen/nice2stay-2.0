  <div class="persisted-data" data-check-in="<%= params[:check_in]%>"
       data-check-out="<%= params[:check_out]%>"
       data-url="<%= price_details_lodging_path(lodging) %>"
       data-validate-url="<%= validate_reservations_path %>"
       data-months="1"></div>

  <div class="card-body">
    <div class="reservation-form-errors-<%= lodging.id %>">
      <%= render 'reservations/errors', resource: reservation %>
    </div>

    <%= form_for reservation, url: reservations_path, remote: true do |f| %>
      <div class="row">
        <div class="col-md-12">
          <div data-lodging-id="<%= lodging.id %>"
               data-disabled-dates="<%= lodging.not_available_on %>">
            <label class="mb-0 text-xs">Dates</label>
            <div class='reservation-datepicker'></div>
          </div>

          <label class="mb-0 text-xs">Guests</label>
          <div class="dropdown guests-dropdown">
            <button class="btn-sm btn-outline-primary dropdown-toggle w-100" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <span class="title">Guest</span>
            </button>

            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <div class="dropdown-item">
                <label>Adults</label>
                <%= f.number_field :adults, value: no_of_adults(f.object.adults), min: 1, class: 'input-spinner adults', id: "adults_#{lodging.id}" %>
              </div>

              <div class="dropdown-item">
                <label>Children</label>
                <%= f.number_field :children, value: f.object.children, min: 0, class: 'input-spinner children', id: "children_#{lodging.id}" %>
              </div>

              <div class="dropdown-item">
                <label>Infants</label>
                <%= f.number_field :infants, value: f.object.infants, min: 0, class: 'input-spinner infants', id: "infants_#{lodging.id}" %>
              </div>

              <div class="dropdown-item">
                <%= link_to 'Done', '#', class: 'btn btn-sm btn-secondary btn-calculate-bill float-right', data: { lodging_ids: [lodging.id] } %>
              </div>

              <%= f.hidden_field :lodging_id, value: lodging.id %>
              <%= hidden_field_tag :standalone, true %>
              <%= f.hidden_field :check_in, id: "check_in_#{lodging.id}", class: 'check_in' %>
              <%= f.hidden_field :check_out, id: "check_out_#{lodging.id}", class: 'check_out' %>
            </div>

            <div class="col-md-12 text-center pt-2">
              <% [:prebooking, :option].each do |status| %>
                <%= f.radio_button :booking_status, status, id: "booking_status_#{status}_#{lodging.id}" %>
                <label><%= status %></label>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <p id="lbl-error-<%= lodging.id %>"></p>
          <div class="text-dark line-height-2" id="bill-<%= lodging.id %>"></div>
        </div>
      </div>

      <%= render 'shared/alert', title: 'Important:', type: 'info', description: "Prices of #{Date.current.year} are not confirmed, it may change." unless lodging.confirmed_price %>

      <%= f.submit 'Add to Cart', class: "btn btn-primary btn col-md-12 btn-booking disabled", id: "cart-#{lodging.id}" %>
    <% end %>
    <p class="extra_small">Geen reserveringskosten of andere toeslagen bij nice2stay</p>
    <div class="row">
      <div class="col-md-6">
        <%= link_to _back_url, class: 'btn btn-outline-secondary w-100' do %>
          <i class="material-icons arrow_back"></i>&nbsp; GO BACK
        <% end %>
      </div>

      <div class="col-md-6">
        <%= render 'wishlists/form', lodging: lodging %>
      </div>
    </div>
  </div>

