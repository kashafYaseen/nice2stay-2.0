<div class="persisted-data"
     data-url="<%= price_details_lodging_path(lodging) %>"
     data-validate-url="<%= validate_reservations_path %>">
</div>

<div class="card-body">
  <div class="reservation-form-errors-<%= lodging.id %>">
    <%= render 'reservations/errors', resource: reservation %>
  </div>

  <%= form_for reservation, url: reservations_path, remote: true do |f| %>
    <div class="row"> 
      <div class="col-md-6">
        <div
          <label class="mb-0 text-xs"><%= t 'search.dates' %></label>
          <div id="vue-app">
            <reservation-datepicker
            :check-in="'<%= params[:check_in]%>'"
            :check-out="'<%= params[:check_out]%>'"
            :check-in-title="'<%= t('search.check_in') %>'"
            :check-out-title="'<%= t('search.check_out') %>'"
            :months="1"
            :lodging-id="<%= lodging.id %>"
            :disabled-dates="<%= lodging.not_available_on %>"
            :customized-dates="<%= lodging.customized_dates %>" />
          </div>
        </div>
      </div>

      <div class="col-md-2">
        <p><label class="mb-0 text-xs">&nbsp;</label></p>
        <p class="asd__day--enabled color-box mb-1"></p>
        <p class="text-xs">Available</p>
        <p class="asd__day--disabled color-box mb-1"></p>
        <p class="text-xs">Not available</p>
        <p class="asd__day--discount color-box mb-1"></p>
        <p class="text-xs">Special offer</p>
        <p class="asd__day--option color-box mb-1"></p>
        <p class="text-xs">Under option</p>
      </div>

      <div class="bg-white">
        <%= render 'shared/alert', title: 'Important:', description: t('not_live_parent'), type: 'info' unless lodging.checked? %>
      </div>

      <div class="col-md-4">
        <label class="mb-0 text-xs"><%= t 'search.guests' %></label>
        <div class="dropdown guests-dropdown">
          <button class="btn btn-outline-primary dropdown-toggle w-100" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="title"><%= t 'search.guests' %></span>
          </button>

          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <div class="dropdown-item">
              <label><%= t 'search.adults' %></label>
              <%= f.number_field :adults, value: no_of_adults(params[:adults] || f.object.adults), min: 1, class: 'input-spinner adults', id: "adults_#{lodging.id}" %>
            </div>

            <div class="dropdown-item">
              <label><%= t 'search.children' %></label>
              <%= f.number_field :children, value: (params[:children] || f.object.children), min: 0, class: 'input-spinner children', id: "children_#{lodging.id}" %>
            </div>

            <div class="dropdown-item">
              <label><%= t 'search.babies' %></label>
              <%= f.number_field :infants, value: (params[:infants] || f.object.infants), min: 0, class: 'input-spinner infants', id: "infants_#{lodging.id}" %>
            </div>

            <div class="dropdown-item">
              <%= link_to 'Done', '#', class: 'btn btn-sm btn-secondary btn-calculate-bill float-right', data: { lodging_ids: [lodging.id] } %>
            </div>
          </div>

          <div class="col-md-3">
            <%= f.hidden_field :lodging_id, value: lodging.id %>
            <%= hidden_field_tag :standalone, true %>
            <%= f.hidden_field :check_in, value: params[:check_in], id: "check_in_#{lodging.id}", class: 'check_in' %>
            <%= f.hidden_field :check_out, value: params[:check_out], id: "check_out_#{lodging.id}", class: 'check_out' %>
            <%= f.hidden_field :cleaning_cost, id: "cleaning_cost_#{lodging.id}", class: 'cleaning-cost' %>
            <%= f.hidden_field :discount, id: "discount_#{lodging.id}", class: 'discount' %>
          </div>

          <div class="col-md-12 text-center pt-2">
            <% [:prebooking, :option].each do |status| %>
            <%= f.radio_button :booking_status, status, id: "booking_status_#{status}_#{lodging.id}" %>
              <label><%= t("reservations.#{status}") %></label>
            <% end %>
            <p id="lbl-error-<%= lodging.id %>"></p>
            <div class="text-dark text-left line-height-2" id="bill-<%= lodging.id %>"></div>
            <%= f.submit t('cart.shopping_cart'), class: "btn btn-primary btn ml-0 col-md-12 btn-booking disabled", id: "cart-#{lodging.id}" %>
              <%= render 'wishlists/form',  lodging: lodging %>
              <p class="extra_small text-center"><%= t 'cart.nice2stay' %></p>
            <%= render 'shared/alert', title: 'Important:', type: 'info', description: t('prices_not_confirmed') unless lodging.confirmed_price %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
    <%= render 'shared/alert', title: 'Important:', type: 'info', description: t('prices_not_confirmed') unless lodging.confirmed_price %>
</div>
