<div class="container">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-8 pt-4">
        <section>
          <%= image_tag @region.image if @region.image.present? %>
        </section>

        <section class="padding-top-3x pb-5">
          <h2 class="mb-3"><%= @region.title %></h2>

          <h5 class="card-title text-muted margin-bottom-1x">
            Ervaar een ideale vakantie in <%= @region.name.try(:capitalize) %>
          </h5>
          <p> <%= @region.content.try(:html_safe) %></p>
        </section>

        <div class="row">
          <div class="p-3 homepage">
            <div class="col-md-12 ml-2 padding-top-1x">
              <h3 class="mb-3">
                "<%= @region.name.try(:capitalize) %> is door ons geselecteert, bezocht en geverifieerd op comfort, kwaliteit & stijl"
              </h3>

              <div class="row">
                <div class="col-md-3 col-lg-2">
                  <div class="d-table">
                    <img class="d-block w-150 mx-auto img-thumbnail rounded d-table-cell align-middle" src="https://imagesnice2stayeurope.s3.amazonaws.com/uploads/image/image/5478/chirsta.jpg" alt="Team">
                  </div>
                </div>

                <div class="col-sm-9 mb-9">
                  <p>Elke villa, vakantiewoning of bed and breakfast in <%= @region.name.try(:capitalize) %> heeft een persoonlijke kwaliteitsinspectie doorstaan, om ervoor te zorgen dat het voldoet aan de hoge standaarden voor comfort, kwaliteit en stijl.  Christa Linders is verantwoordelijk voor portefolio <%= @region.name.try(:capitalize) %> </p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <section class="padding-top-3x p-0 pb-5">
          <h3>In the spotlight</h3>
          <hr class="mt-3"></hr>

          <div class="row mb-3 you-may-like-lodgings">
            <%= render @lodgings %>
          </div>
        </section>

        <% if @custom_texts.present? %>
          <section class="padding-top-1x pb-5">
            <h3 class="mb-30">Our collection in <%= @region.name.try(:capitalize) %></h3>
            <hr class="mt-3"></hr>

            <div class="isotope-grid cols-2">
              <div class="gutter-sizer"></div>
              <div class="grid-sizer"></div>

              <% @custom_texts.each do |custom_text| %>
                <div class="grid-item gallery-item">
                  <%= link_to seo_url custom_text.seo_path do %>
                    <%= image_tag custom_text.image if custom_text.image.present? %>
                    <h2 class="image-title-box"><%= custom_text.menu_title %></h2>
                    <span class="caption"><%= custom_text.h1_text %></span>
                  <% end %>
                </div>
              <% end %>
            </div>
          </section>
        <% end %>
      </div>

      <div class="col-md-4">
        <section class="padding-top-1x ">
          <h3 class="mb-20"><%= @region.name.try(:capitalize) %></h3>
          <hr class="mt-1"></hr>
        </section>

        <section class="widget-tags">
          <h5 class="mt-5 mb-10">Collections in <%= @region.name.try(:capitalize) %></h5>

          <a class="tag" href="#">#furniture</a><a class="tag" href="#">#lighting</a><a class="tag" href="#">#LED</a><a class="tag" href="#">#interior</a><span class="tag">#active tag</span><a class="tag" href="#">#office supplies</a><a class="tag" href="#">#storage</a>
        </section>

        <h5 class="mt-5">Zoek</h5>
        <hr class="mt-0"></hr>

        <%= form_tag lodgings_path, method: :get, data: { check_in: params[:check_in], check_out: params[:check_out] }, id: 'homepage_search_form' do %>
          <div class="row">
            <div class="col-md-12 col-sm-12 pt-2">
              <%= text_field_tag :query, params[:query], placeholder: t('usp.search'), class: 'h6 form-control autocomplete autocomplete-field' %>
            </div>

            <div class="col-md-12 col-sm-12">
              <div class="row homepage-actions-row pt-0">
                <div id='datepicker'></div>

                <div class="dropdown guests-dropdown">
                  <button class="btn btn-outline-primary dropdown-toggle btn-sm" type="button" id="dropdownMenuButton1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="title"><%= t 'search.guests' %></span>
                  </button>

                  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                    <div class="dropdown-item">
                      <label><%= t 'search.adults' %></label>
                      <%= number_field_tag :adults, params[:adults], min: 0, class: 'input-spinner adults' %>
                    </div>

                    <div class="dropdown-item">
                      <label><%= t 'search.children' %></label>
                      <%= number_field_tag :children, params[:children], min: 0, class: 'input-spinner children' %>
                    </div>

                    <div class="dropdown-item">
                      <label><%= t 'search.babies' %></label>
                      <%= number_field_tag :infants, params[:infants], min: 0, class: 'input-spinner infants' %>
                    </div>
                  </div>
                </div>
                <%= hidden_field_tag :standalone, true %>
                <%= submit_tag :submit, value: t('search.search_button'), class: 'btn btn-primary btn' , data: { disable_with: t('search.search_button') }
                %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% if @all_reviews.present? %>
  <div class="leads_homepage">
    <section class="container padding-top-3x pb-5">
      <h2 class="text-center mb-30">Latest Customer Reviews in <%= @region.name %> </h2>
      <div class="row mt-30">
        <div class="col-md-4 mb-4">
          <%= render 'reviews/average_rating', reviews: @all_reviews %>
        </div>

        <div class="col-md-8">
          <div class="reviews-container">
            <%= render @reviews %>
          </div>

          <div class="homepage-review-paginator">
            <%= paginate @reviews, remote: true %>
          </div>
        </div>
      </div>
    </section>
  </div>
<% end %>

<%= render 'shared/meta_tags', resource: @region %>

<%= content_for :js_init do %>
  Autocomplete.init("<%= autocompletes_path(locale: locale) %>");
  initDatePicker();
  GuestDropdown.init();
  OwlCarousel.init();
<% end %>
