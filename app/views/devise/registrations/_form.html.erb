
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: rendom_id(resource) }) do |f| %>
  <%= render 'shared/errors', resource: resource %>

  <%= render 'devise/registrations/common_fields', f: f, countries: countries %>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password', id: rendom_id(resource, :password) %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Confirm Password', id: rendom_id(resource, :password_confirmation) %>
  </div>

  <div class="form-group">
    <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
  </div>
<% end %>
