<% colums = colums.presence || 'col-md-12' %>

<div class="row">
  <div class="<%= colums %>">
    <p>Sign up with social account</p>

    <%= link_to user_facebook_omniauth_authorize_path(locale: locale), class: 'media-btn media-facebook w-100' do %>
      <i class="fab fa-facebook-f"></i>
      <span>Sign up with Facebook</span>
    <% end %>

    <%= link_to user_google_oauth2_omniauth_authorize_path(locale: locale), class: 'media-btn media-google w-100' do %>
      <i class="fab fa-google"></i>
      <span>Sign up with Google+</span>
    <% end %>

    <%= link_to user_instagram_omniauth_authorize_path(locale: locale), class: 'media-btn media-instagram w-100' do %>
      <i class="fab fa-instagram"></i>
      <span>Sign up with Instagram</span>
    <% end %>
  </div>

  <div class="<%= colums %>">
    <p>Sign up with email</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: rendom_id(resource) }) do |f| %>
      <%= render 'shared/errors', resource: resource %>

      <%= render 'devise/registrations/common_fields', f: f, countries: countries %>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password', id: rendom_id(resource, :password) %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Confirm Password', id: rendom_id(resource, :password_confirmation) %>
      </div>

      <div class="form-group">
        <%= recaptcha_tags %>
      </div>

      <div class="form-group">
        <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
  </div>
</div>
