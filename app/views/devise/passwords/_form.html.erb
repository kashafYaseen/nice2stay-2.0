<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, remote: remote) do |f| %>
  <%= devise_error_messages! %>

  <br>
  <p class="text-center">Enter your email address below and we will send you a link to reset your password.</p>
  <div class="form-group">
    <%= f.email_field :email, autofocus: true, placeholder: 'Email Address', class: 'form-control', id: rendom_id(resource, :email) %>
  </div>

  <div class="form-group">
    <%= f.submit "Send password reset email", class: 'btn btn-primary btn-block btn-lg' %>
  </div>
<% end %>
