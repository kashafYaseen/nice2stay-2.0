<% if @campaigns.present? %>
  <section class="container padding-top-3x pb-5">
    <h2 class="text-center mb-30">Our collection</h2>

    <div class="isotope-grid cols-2">
      <div class="gutter-sizer"></div>
      <div class="grid-sizer"></div>

      <% @campaigns.each do |campaign| %>
        <div class="grid-item gallery-item">
          <%= link_to campaign.url do %>
            <%= image_tag campaign.image %>
            <h2 class="image-title-box"><%= campaign.title %></h2>
          <% end %>

          <span class="caption"><%= campaign.description.html_safe %></span>
        </div>
      <% end %>
    </div>
  </section>
<% end %>

<div class="leads_homepage">
<section class="container padding-top-3x pb-5">
