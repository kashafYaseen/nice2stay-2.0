<div class="container-fluid">
  <div class="row">
  
  <div class="col-sm-12 margin-top-1x col-xs-12 col-md-7">
    <section class="padding-top-10x padding-bottom-10x homepage-cover">
        </section>
    
  </div>
  <div class="col-sm-12 margin-top-1x col-xs-12 col-md-5 margin-top-1x ">

    
    <h3 class="mb-3"><%= t 'usp.verhaal' %></h3>
    <hr class="mt-1"></hr>
    <div class="col-md-12 padding-top-1x padding-bottom-2x homepage">
            <%= form_tag lodgings_path, method: :get, data: { check_in: params[:check_in], check_out: params[:check_out] }, id: 'homepage_search_form' do %>
              <div class="row">
                <div class="col-md-12 col-sm-12 pt-2">
                  <%= text_field_tag :query, params[:query], placeholder: t('usp.search'), class: 'h6 form-control autocomplete autocomplete-field' %>
                
                </div>
                
                <div class="col-md-12 col-sm-12">
                  <div class="row homepage-actions-row pt-0">
                    <div id='datepicker'></div>

                    <div class="dropdown guests-dropdown">
                      <button class="btn btn-outline-primary dropdown-toggle btn-sm" type="button" id="dropdownMenuButton1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="title"><%= t 'search.guests' %></span>
                      </button>

                      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                        <div class="dropdown-item">
                          <label><%= t 'search.adults' %></label>
                          <%= number_field_tag :adults, params[:adults], min: 0, class: 'input-spinner adults' %>
                        </div>

                        <div class="dropdown-item">
                          <label><%= t 'search.children' %></label>
                          <%= number_field_tag :children, params[:children], min: 0, class: 'input-spinner children' %>
                        </div>

                        <div class="dropdown-item">
                          <label><%= t 'search.babies' %></label>
                          <%= number_field_tag :infants, params[:infants], min: 0, class: 'input-spinner infants' %>
                        </div>
                      </div>
                    </div>
                    <%= hidden_field_tag :standalone, true %>
                    <%= submit_tag :submit, value: t('search.search_button'), class: 'btn btn-primary btn' , data: { disable_with: t('search.search_button') }
                    %>
                  </div>
                </div>
              </div>
            <% end %>

        </div>




        <div class="row">


          <div class="col-sm-6 margin-top-1x ">
            <section class="widget">
              <h5 class="mb-10">Contact</h5>
              <hr class="mt-3 mb-2"></hr>

              <p class="text-xxs"><i class="material-icons phone"></i>&nbsp;<%= t 'pdf_document.tel_number' %> 0031-238447005</p>
              <ul class="list-unstyled text-sm">

                <li><span class="text-xxs text-muted"><%= t 'opens.week' %></li>
                <li><span class="text-xxs text-muted"><%= t 'opens.weekend' %></li>
            
              </ul>
            </section> 
          </div>
          <div class="col-sm-6 margin-top-1x ">
             <section class="widget-tags">
          <h5 class="mb-10">Nice2stay</h5>

          <% @pages.each do |page| %>
            <%= link_to page.title, page_path(page), class: "tag" %>
          <% end %>
        </section>
          </div>
        </div>
  </div>
</div>


 <div class="row">
  
  <div class="col-sm-12 margin-top-1x col-xs-12 col-md-7">
    <h3 class="mb-3"><%= t 'usp.homepage' %></h3>
          <h5 class="card-title text-muted margin-bottom-1x"><%= t 'usp.holiday' %></h5>
          <p><%= t 'usp.intro_details' %></p>
  <section class="col-md-12 padding-top-2x homepage padding-bottom-2x">
            <div class="row pt-2">
              <div class="col-md-4 col-sm-4 col-xs-6 text-center mb-30" >
                <span class="d-block display-4 text-gray-light mb-4">
                  <%= image_tag("usp_visit.png", :alt => "visit") %>
                </span>

                <h4 class="h5 mb-2"><%= t 'usp.inspect' %></h4>
                <p class="text-muted mb-0"><%= t 'usp.inspect_details' %></p>
              </div>

              <div class="col-md-4 col-sm-4 col-xs-6 text-center mb-30">
                <span class="d-block display-4 text-gray-light mb-4">
                  <%= image_tag("usp_support.png", :alt => "visit") %>
                </span>

                <h5 class="h5 mb-2"><%= t 'usp.price' %></h5>
                <p class="text-muted mb-0"><%= t 'usp.price_details' %></p>
              </div>

              <div class="col-md-4 col-sm-4 col-xs-6 text-center mb-30">
                <span class="d-block display-4 text-gray-light mb-4">
                  <%= image_tag("usp_support.png", :alt => "visit") %>
                </span>

                <h4 class="h5 mb-2"><%= t 'usp.advice' %></h4>
                <p class="text-muted mb-0"><%= t 'usp.advice_details' %></p>
              </div>
            </div>
          </section>
  </div>

     <div class="col-sm-12 margin-top-1x col-xs-12 col-md-5">
   

        <section class="widget-tags">
          <h5 class="mt-1 mb-10"><%= t 'collection.populair' %></h5>

          <% @menu_custom_texts.each do |custom_text| %>
            <%= link_to "#{custom_text.menu_title}", seo_url(custom_text.seo_path), class: 'tag' %>
          <% end %>

          <% @custom_texts.each do |custom_text| %>
            <%= link_to "#{custom_text.menu_title}", seo_url(custom_text.seo_path), class: 'tag' %>
          <% end %>
        </section>

        <section class="widget-tags">
          <h5 class="mt-5 mb-10"><%= t 'nav.landen' %></h5>

          <% @countries_enabled.each do |country| %>
            <%= link_to country.name, country_path(country, locale: locale), class: "tag" %>
          <% end %>
        </section>


    
    </div>

   </div>

 <div class="row">
  
  <div class="col-sm-12 margin-top-1x col-xs-12 col-md-12">
     <% if @custom_texts.present? %>
          <section class="padding-top-1x pb-5">
            <h3 class="mb-30"><%= t 'collection.normal' %></h3>
            <hr class="mt-3"></hr>

            <div class="isotope-grid cols-4">
              <div class="gutter-sizer"></div>
              <div class="grid-sizer"></div>

              <% @custom_texts.each do |custom_text| %>
                <div class="grid-item gallery-item">
                  <%= link_to seo_url custom_text.seo_path do %>
                    <%= image_tag custom_text.image if custom_text.image.present? %>
                    <h2 class="image-title-box"><%= custom_text.menu_title %></h2>
                    <span class="caption"><%= custom_text.h1_text %></span>
                  <% end %>
                </div>
              <% end %>
              <% @custom_texts.each do |custom_text| %>
                <div class="grid-item gallery-item">
                  <%= link_to seo_url custom_text.seo_path do %>
                    <%= image_tag custom_text.image if custom_text.image.present? %>
                    <h2 class="image-title-box"><%= custom_text.menu_title %></h2>
                    <span class="caption"><%= custom_text.h1_text %></span>
                  <% end %>
                </div>
              <% end %>
               


            </div>
          </section>
        <% end %>

       



       

    
    
    </div>
    

  </div>


  <div class="row">
  <% if @all_reviews.present? %>

  <div class="col-sm-12 margin-top-1x col-xs-12 col-md-7">
    <h3 class="mb-3"><%= t 'nav.reviews' %></h3>
          <h5 class="card-title text-muted margin-bottom-1x"><%= t 'nav.reviews' %></h5>
          <p><%= t 'usp.intro_details' %></p>
  <section class="col-md-12 padding-top-2x leads_homepage padding-bottom-2x">
            <div class="reviews-container">
            <%= render @reviews %>
          </div>
          <div class="homepage-review-paginator">

            <%= paginate @reviews, remote: true %>
          </div>
            </div>
        </section>
 
  <div class="col-sm-12 margin-top-2x col-xs-12 col-md-5">
     <h5 class="card-title margin-top-1x  text-muted margin-bottom-1x">Gemiddelde scorce</h5>
    <%= render 'reviews/average_rating', reviews: @all_reviews %>
  </div>
 </div>
 <% end %>
 </div>

