<% content_for :body_class, "home-full-page-layout" %>

<div class="row price_box m-0">
  <div class="jumbotron jumbotron-background col-md-12 p-0">
    <div class="dark-overlay-image">
      <div class="offset-md-1 col-sm-12 col-md-6 col-lg-5 col-xl-4 mt-vh">
        <div class="row text-center">
          <div class="card bg-white p-3">
            <div class="card-body text-left">
              <h1 class="display-4"><%= t('usp.discover') %></h1>
              <h5><%= t('usp.search') %></h5>

              <div class="row">
                <div class="col-md-12">
                  <%= form_tag lodgings_path, method: :get, data: { check_in: params[:check_in], check_out: params[:check_out] }, id: 'homepage_search_form' do %>
                    <div class="row">
                      <div class="col-12 pt-3">
                        <%= text_field_tag :query, params[:query], placeholder: t('usp.search'), class: 'h6 form-control autocomplete autocomplete-field autocomplete-general' %>
                      </div>

                      <div class="col-12">
                        <div class="vue-app">
                          <datepicker
                            :trigger-id="'trigger-range'"
                            :check-in="'<%= params[:check_in]%>'"
                            :check-out="'<%= params[:check_out]%>'"
                            :months="2"
                            :min-date="'<%= Date.yesterday %>'"
                            :action-buttons="true"
                            :full-screen="false"
                            :trigger-button="'btn btn-outline-primary w-100'"
                            :inline="false"
                          />
                        </div>
                      </div>

                      <div class="col-12">
                        <div class="vue-app">
                          <guests-dropdown
                            :adults="<%= params[:adults].to_i %>"
                            :children="<%= params[:children].to_i %>"
                            :infants="<%= params[:infants].to_i %>"
                            :adults-target="'.adults'"
                            :children-target="'.children'"
                            :infants-target="'.infants'"
                            :dropdown-id="'<%= "guests-dropdown-homepage" %>'"
                            :show-apply="false"
                            :button-classes="'btn btn-outline-primary dropdown-toggle w-100'"
                          />
                        </div>
                      </div>

                      <div class="col-12">
                        <%= hidden_field_tag :adults, params[:adults], class: 'adults' %>
                        <%= hidden_field_tag :children, params[:children], class: 'children' %>
                        <%= hidden_field_tag :infants, params[:infants], class: 'infants' %>
                        <%= hidden_field_tag :standalone, true %>
                        <%= hidden_field_tag :country, params[:country], class: 'autocomplete-country' %>
                        <%= hidden_field_tag :region, params[:region], class: 'autocomplete-region' %>
                        <%= submit_tag :submit, value: t('search.search_button'), class: 'btn btn-primary float-right' , data: { disable_with: t('search.search_button') }
                        %>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-12 col-lg-4 margin-top-1x ups-tags">
      <div class="card margin-bottom-1x">
        <div class="card-body bg-white">
          <div class="row pt-2">
            <div class="col-md-6 col-lg-12 mb-5 mb-md-0">
              <div class="row">
                <span class="col-md-4 display-4 text-gray-light mb-4 text-center">
                  <%= image_tag("usp_visit.png", alt: "visit") %>
                </span>

                <div class="col-md-8 text-center text-md-left">
                  <h4 class="h5 mb-2"><%= t 'usp.inspect' %></h4>
                  <p class="text-muted text-xxxs mb-0"><%= t 'usp.inspect_details' %></p>
                </div>
              </div>
            </div>

            <div class="col-md-6 col-lg-12 mb-5 mb-md-0">
              <div class="row">
                <span class="col-md-4 display-4 text-gray-light mb-4 text-center">
                  <%= image_tag("usp_support.png", alt: "visit") %>
                </span>

                <div class="col-md-8 text-center text-md-left">
                  <h5 class="h5 mb-2"><%= t 'usp.price' %></h5>
                  <p class="text-muted text-xxxs mb-0"><%= t 'usp.price_details' %></p>
                </div>
              </div>
            </div>

            <div class="col-md-6 col-lg-12 mb-5 mb-md-0">
              <div class="row">
                <span class="col-md-4 display-4 text-gray-light mb-4 text-center">
                  <%= image_tag("usp_helpdesk.png", alt: "visit") %>
                </span>

                <div class="col-md-8 text-center text-md-left">
                  <h5 class="h5 mb-2"><%= t 'usp.advice' %></h5>
                  <p class="text-muted text-xxxs mb-0"><%= t 'usp.advice_details' %></p>
                </div>
              </div>
            </div>

            <div class="col-md-6 col-lg-12 mb-5 mb-md-0">
              <div class="row">
                <span class="col-md-4 display-4 text-gray-light mb-4 text-center">
                  <%= image_tag("usp_secure.png", alt: "visit") %>
                </span>

                <div class="col-md-8 text-center text-md-left">
                  <h5 class="h5 mb-2"><%= t 'usp.payment' %></h5>
                  <p class="text-muted text-xxxs mb-0"><%= t 'usp.payment_details' %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <% @campaigns.each do |campaign| %>
      <div class="col-sm-12 col-md-6 col-lg-4 margin-top-1x spotlight-campaigns">
        <div class="row">
          <div class="col-md-12">
            <div class="grid-item gallery-item">
              <%= link_to campaign.url do %>
                <%= image_tag campaign.image if campaign.image.present? %>
                <h2 class="image-title-box"><%= campaign.title %></h2>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="row m-0">
  <div class="col-md-12 p-0">
    <h6 class="text-muted text-normal text-uppercase margin-top-3x text-center"><%= t 'collection.populair' %></h6>
    <hr class="margin-bottom-1x">
    <div class="owl-carousel" data-owl-carousel='{ "nav": false, "dots": true, "loop": true, "margin": 1, "autoplay": true, "autoplayTimeout": 4000, "responsive": {"0":{"items": 2}, "630":{"items": 3}, "800": {"items":4}, "1200": {"items": 5}} }'>

      <% @custom_texts.popular.each do |custom_text| %>
        <div class="grid-item gallery-item">
          <%= link_to seo_url custom_text.seo_path do %>
            <%= image_tag custom_text.image if custom_text.image.present? %>
            <h2 class="image-title-box"><%= custom_text.menu_title %></h2>
            <span class="caption"><%= custom_text.h1_text %></span>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="col-md-12 p-0">
    <h6 class="text-muted text-normal text-uppercase margin-top-3x text-center">Popular Destination</h6>
    <hr class="margin-bottom-1x">
    <div class="owl-carousel" data-owl-carousel='{ "nav": false, "dots": true, "loop": true, "margin": 1, "autoplay": true, "autoplayTimeout": 4000, "responsive": {"0":{"items": 2}, "630":{"items": 3}, "800": {"items":4}, "1200": {"items": 5}} }'>

      <% @countries_enabled.each do |country| %>
        <div class="grid-item gallery-item">
          <%= link_to country_path(country, locale: locale) do %>
            <%= image_tag country.image if country.image.present? %>
            <h2 class="image-title-box"><%= country.name %></h2>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="margin-bottom-3x"></div>

<div class="row price_box m-0">
  <div class="jumbotron jumbotron-background col-md-8 p-0">
    <div class="dark-overlay-image">
      <div class="container-fluid">
        <div class="col-md-12 text-center mt-200">
          <h1 class="text-white display-4 text-uppercase">Trust Our Taste </h1>
          <h3 class="text-white"> <%= t 'usp.discover' %> </h3>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-4 pl-5 pr-5 my-auto">
    <h6 class="text-bold"><%= t 'usp.intro_details' %></h6>
    <h4 class="text-bold"> <%= t 'usp.discover' %> </h4>
  </div>
</div>

<% content_for :canonical do %><%= root_url %><% end %>
