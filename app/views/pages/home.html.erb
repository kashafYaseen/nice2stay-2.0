<section class="fw-section padding-top-7x padding-bottom-8x homepage-cover">
  <div class="container">
    <div class="col-md-12">
        <%= form_tag lodgings_path, method: :get, data: { check_in: params[:check_in], check_out: params[:check_out] }, id: 'homepage_search_form' do %>
          <div class="row">
            <div class="col-md-7 col-sm-12 pt-2">
              <%= text_field_tag :query, params[:query], :placeholder => t('usp.search'), class: 'h6 form-control autocomplete autocomplete-field' %>
            </div>

            <div class="col-md-5 col-sm-12">
              <div class="row homepage-actions-row pt-0">
                <div id='datepicker'></div>

                <div class="dropdown guests-dropdown">
                  <button class="btn btn-outline-primary dropdown-toggle btn-sm" type="button" id="dropdownMenuButton1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <span class="title">Guest</span>
                  </button>

                  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                    <div class="dropdown-item">
                      <label>Adults</label>
                      <%= number_field_tag :adults, params[:adults], min: 0, class: 'adults' %>
                    </div>

                    <div class="dropdown-item">
                      <label>Children</label>
                      <%= number_field_tag :children, params[:children], min: 0, class: 'children' %>
                    </div>

                    <div class="dropdown-item">
                      <label>Infants</label>
                      <%= number_field_tag :infants, params[:infants], min: 0, class: 'infants' %>
                    </div>
                  </div>
                </div>

                <%= submit_tag 'SEARCH', class: 'btn btn-primary btn-sm' %>
              </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<section class="container padding-top-2x padding-bottom-2x">
  <div class="row pt-2">
    <div class="col-md-4 col-sm-4 col-xs-6 text-center mb-30">
      <span class="d-block display-4 text-gray-light mb-4">
        <%= image_tag("usp_visit.png", :alt => "visit") %>
      </span>

      <h4 class="h6 mb-2"><%= t 'usp.inspect' %></h4>
      <p class="text-sm text-muted mb-0"><%= t 'usp.inspect_details' %></p>
    </div>

    <div class="col-md-4 col-sm-4 col-xs-6 text-center mb-30">
      <span class="d-block display-4 text-gray-light mb-4">
         <%= image_tag("usp_support.png", :alt => "visit") %>
      </span>

      <h4 class="h6 mb-2"><%= t 'usp.price' %></h4>
      <p class="text-sm text-muted mb-0"><%= t 'usp.price_details' %></p>
    </div>

    <div class="col-md-4 col-sm-4 col-xs-6 text-center mb-30">
      <span class="d-block display-4 text-gray-light mb-4">
        <%= image_tag("usp_support.png", :alt => "visit") %>
      </span>

      <h4 class="h6 mb-2"><%= t 'usp.advice' %></h4>
      <p class="text-sm text-muted mb-0"><%= t 'usp.advice_details' %></p>
    </div>
  </div>
</section>

<div class="container padding-top-1x pb-5 homepage">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-6">
      <h3 class="mb-3"><%= t 'usp.intro' %></h3>

      <p><%= t 'usp.intro_details' %></p>

      <%= link_to 'more information', over_ons_pages_path(locale: locale), class: 'btn btn-outline-primary' %>
    </div>

    <div class="col-xs-12 col-sm-6 col-md-3"></div>
    <div class="col-xs-12 col-sm-6 col-md-3  homepage_image"></div>
  </div>
</div>

<% if @homepage_campaigns.present? %>
  <section class="container padding-top-3x pb-5">
    <h2 class="text-center mb-30">Our collection</h2>

    <div class="isotope-grid cols-2">
      <div class="gutter-sizer"></div>
      <div class="grid-sizer"></div>

      <% @homepage_campaigns.each do |campaign| %>
        <div class="grid-item gallery-item">
          <%= link_to campaign.url do %>
            <%= image_tag campaign.image if campaign.image.present? %>
            <h2 class="image-title-box"><%= campaign.title %></h2>
          <% end %>

          <span class="caption"><%= campaign.description.try(:html_safe) %></span>
        </div>
      <% end %>
    </div>
  </section>
<% end %>

<% if @all_reviews.present? %>
  <div class="leads_homepage">
    <section class="container padding-top-3x pb-5">
       <h2 class="text-center mb-30">Rating & Latest Customer Reviews</h2>
      <div class="row mt-30">
        <div class="col-md-4 mb-4">
          <%= render 'reviews/average_rating', reviews: @all_reviews %>
        </div>

        <div class="col-md-8">
          <div class="reviews-container">
            <%= render @reviews %>
          </div>

          <div class="homepage-review-paginator">
            <%= paginate @reviews, remote: true %>
          </div>
        </div>
      </div>
    </section>
  </div>
<% end %>

<section class="container padding-top-3x pb-5">
  <h3 class="text-center mb-3">Wilt u advies voor uw vakantie?</h3>
  <%= render 'leads/form', lead: @lead, countries: @countries_enabled %>
</section>

<% if not user_signed_in? %>
  <div class="leads_homepage">
    <section class="container padding-top-3x pb-5">
       <h2 class="mb-3">New ? signup for nice2stay account......</h2>
        <p>Share you're favorites, get the latest deals, and much more...</p>
        <%= link_to 'GET STARTED WITH THE ACCOUNT', new_user_registration_path, class: 'btn btn-outline-primary' %>
        <a class="btn btn-white" href="#">Who is nice2stay?</a>
        </div>
      </div>
    </section>
  </div>
<% end %>

<%= content_for :js_init do %>
  Autocomplete.init("<%= autocompletes_path(locale: locale) %>");
  initDatePicker();
  GuestDropdown.init();
<% end %>
