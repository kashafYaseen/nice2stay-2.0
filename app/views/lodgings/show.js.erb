$('.reviews-container').html('<%= j render @reviews %>');
$('.review-paginator').html('<%= j paginate @reviews, remote: true, window: 0 %>');
$('.you-may-like-lodgings').html('<%= j render @lodgings %>');
$('.lodgings-list-json').replaceWith('<%= j tag.div class: "lodgings-list-json", data: { feature: ( @places.collect{|key, value| value.collect(&:feature)}.flatten + [@lodging.feature]) } %>');
Map.init_with('<%= @lodging.to_json(methods: [:feature], only: []) %>', 'lodging-map-location');
$('.nearby-places').html('<%= j render "places/index", grouped_places: @places, lodging: @lodging %>');
$('.nearby-places-title').text('Nearby Places Within <%= params[:places_within].presence || "100km" %>');
$('#loader').hide();
$('[data-toggle="tooltip"]').tooltip();
OwlCarousel.init();
