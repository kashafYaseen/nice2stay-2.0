$('.reviews-container').html('<%= j render @reviews %>');
$('.review-paginator').html('<%= j paginate @reviews, remote: true, window: 0 %>');
$('.you-may-like-lodgings').html('<%= j render partial: "lodging", collection: @lodgings, locals: { hits: @lodgings.hits } %>');
$('.lodgings-list-json').replaceWith('<%= j render_show_page_map @lodging, @places %>');
$('.nearby-places').html('<%= j render "places/index", grouped_places: @places.group_by(&:place_category), lodging: @lodging %>');
$('.nearby-places-title').text('Nearby Places Within <%= params[:places_within].presence || "100km" %>');
$('#loader').hide();
$('[data-toggle="tooltip"]').tooltip();
OwlCarousel.init();
Map.init_with('<%= @lodging.to_json(methods: [:feature], only: []) %>', 'lodging-map-location');
