<div class="reservation-standalone-form">
  <%= render 'reservations/standalone_form', lodging: lodging, reservation: reservation %>
</div>

<div class="col-md-12 d-block p-0 fixed-bottom">
  <div class="card bg-white p-0">
    <div class="card-body mt-3 p-0">
      <div class="row ml-5 mr-5">
        <div class="col-md-4 my-auto ml-0">
          <input type="button" name="view-info" value="Questions about <%= lodging.name %>" class="btn btn-outline-secondary text-danger w-75 btn-sm standalone-question-btn">
        </div>

        <div class="col-md-3 my-auto">
          <input type="button" name="view-more-info" value="Change dates and guests" class="btn btn-outline-primary btn-sm w-100 standalone-modal-btn">
        </div>

        <div class="col-md-3 my-auto">
          <%= button_tag class: "btn btn-outline-primary btn-sm w-100 btn-booking d-none standalone-modal-btn", id: "reservation-footer-btn-#{lodging.id}" do %> CHECKOUT
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="standalone-form-modal" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-white pb-0">
        <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>

      <div class="modal-body">
        <div class="reservation-standalone-form-modal">
          <%= render 'reservations/standalone_form', lodging: lodging, reservation: reservation %>
        </div>
      </div>
    </div>
  </div>
</div>
