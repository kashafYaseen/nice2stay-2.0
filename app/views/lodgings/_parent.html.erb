<div>
  <div class="reservation-parent-form-1">
    <%= render 'reservations/parent_form', lodging: lodging, reservation: reservation, id_sufix: '' %>
  </div>

  <div class="col-md-12 d-block p-0 fixed-bottom">
    <div class="card bg-white p-1">
      <div class="card-body mt-3 p-0">
        <div class="row ml-5 mr-5">
          <div class="col-md-4 my-auto ml-0">
            <input type="button" name="view-info" value="Questions about <%= lodging.name %>" class="btn btn-outline-secondary text-danger w-75 btn-sm standalone-question-btn">
          </div>
          <div class="col-md-3">
          <input type="button" name="view-more-info" value="Change dates and guests" class="btn btn-outline-primary w-100 btn-sm standalone-modal-btn">
          </div>
          <div class="col-md-3">
          <%= link_to 'Check Availability', '', class: "btn btn-outline-primary btn-sm btn-calculate-bill w-100", data: { lodging_ids: lodging.lodging_children.try(:ids) } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="parent-form-modal" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-white pb-0">
        <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>

      <div class="modal-body">
        <div class="reservation-parent-form-2">
          <%= render 'reservations/parent_form', lodging: lodging, reservation: reservation, id_sufix: '_modal' %>
        </div>
      </div>
    </div>
  </div>
</div>
