
<div class="col-md-12 pr-3 pr-sm-0 lodging-container" data-lodging-id="<%= lodging.id %>" id="lodging-<%= lodging.id %>">

  <div class="border-default card-body bg-white">
    <div class="row">
      <div class="col-md-4 col-xs-12">
        <div class="owl-carousel">
          <%= render_image_tags lodging, class: "card-img-top" %>
        </div>
      </div>

      <div class="col-md-8 col-xs-12">
        <%= link_to lodging_path(lodging, check_in: params[:check_in], check_out: params[:check_out]), class: "text-decoration-none row" do %>

          <div class="col-md-10 col-xs-12">
            <h5 class="card-title"><%= lodging.name %></h5>

            <p class="card-text">
              <%= pluralize lodging.beds, "bedroons" %> <%= pluralize lodging.baths, "bathrooms" %>
            </p>

            <p class="card-text"><%= truncate(lodging.short_desc, length: 165) %></p>
            <ul class="list-icon">
              <p class="card-text">
                <i class="material-icons md-24 check text-success"></i><%= lodging.highlight_1 %>
                <i class="material-icons md-24 check text-success"></i><%= lodging.highlight_2 %>
                <i class="material-icons md-24 check text-success"></i><%= lodging.highlight_3 %>
              </p>
            </ul>
          </div>

          <div class="col-md-2 col-xs-12">
            <h3><%= lodging.cumulative_price(params) %></h3>
            <p class="price-text"> per night</p>
            <div class="product-rating position-static">
              <%= render_stars_tag lodging.average_rating %>
            </div>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
