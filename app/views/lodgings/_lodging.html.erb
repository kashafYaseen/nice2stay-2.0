<div>
 <p><%= link_to lodging.address, lodging %></p>
  <div><%= pluralize lodging.beds, "bed" %> <%= pluralize lodging.baths, "bath" %> <%= lodging.sq__ft %> sqft</div>
  <div><%= lodging.cumulative_price(params) %></div>

  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#lodging-<%= lodging.id %>-modal">
    Make a Reservation
  </button>
</div>
<hr />

<!-- Modal -->
<div class="modal fade" id="lodging-<%= lodging.id %>-modal" tabindex="-1" role="dialog" aria-labelledby="lodgingModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <%= form_for @reservation, html: { id: "new_reservation_#{lodging.id}" } do |f| %>
        <div class="modal-header">
          <h5 class="modal-title" id="lodgingModalLabel">Make a Reservation</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <label>Check in - Check out</label>
          <div class='reservation-datepicker'></div>
          <%= f.hidden_field :lodging_id, value: lodging.id, id: "lodging_id_#{lodging.id}" %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit 'Save', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
