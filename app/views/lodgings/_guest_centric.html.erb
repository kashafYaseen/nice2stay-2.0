<div class="col-md-12">
  <% if guest_centric.present? && guest_centric['response'].present? %>
    <% guest_centric['response']['hotels'].each do |hotel| %>
      <h3><%= hotel['info']['hotelName'] %> Offers</h3>

      <% hotel['offers'].each do |child| %>
        <% if child['isPromotion'] %>
          <%= render partial: 'lodgings/guest_centric_child', collection: child['offers'], as: :child, locals: { lodging: lodging } %>
        <% else %>
          <%= render 'lodgings/guest_centric_child', child: child, lodging: lodging %>
        <% end %>
      <% end %>
    <% end %>
  <% else %>
    <p>Please select dates & guest details.</p>
  <% end %>
</div>
