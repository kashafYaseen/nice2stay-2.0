<div>
  <% if lodging.all_discounts.present? %>
    <div class="bg-white row padding-bottom-1x pt-5 mb-1 target-section">
      <div class="col-md-12">
        <h3 class="card-title">Special Offers</h3>
        <%= render 'discounts/discounts', discounts: lodging.all_discounts, parent: lodging.as_parent? %>
      </div>
    </div>
  <% end %>

  <div class="row bg-white pt-5 target-section gallery-container-minimized" id="gallery-container">
    <div class="col-md-12">
      <div class="gallery-wrapper">
        <div class="isotope-grid cols-5">
          <div class="gutter-sizer"></div>
          <div class="grid-sizer"></div>

          <% lodging.images.each do |image| %>
            <div class="grid-item gallery-item">
              <a href="<%= image %>">
                <img src="<%= image %>" itemprop="thumbnail" alt="<%= lodging.name %>" />
              </a>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <button class="btn float-right btn-gallery-container d-block d-sm-none m-0 pr-0">
        Show All
      </button>
    </div>
  </div>

  <div class="bg-white row padding-bottom-1x pt-5 mb-1 target-section" id="location-container">
    <div class="col-md-12">
      <h3><%= t 'nav.location' %> <%= @lodging.name %></h3>
      <h5 class="card-title"><%= @lodging.h2 %></h5>

      <%= lodging.location_description.try(:html_safe) %>
    </div>

    <div class="col-md-12 address-mark" id="lodging-map-location"></div>
    <%= render_show_page_map lodging, places %>

    <h4 class="nearby-places-title">
      Nearby Places Within <%= params[:places_within].presence || '100km' %>
    </h4>

    <div class="col-md-12 nearby-places mt-3">
      <%= render 'places/index', grouped_places: places.group_by(&:place_category), lodging: lodging %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 target-section" id="description-container">
      <h3 class="card-title"><%= @lodging.h3 %></h3>
      <hr class="margin-bottom-1x">

      <div id="lodging-description">
        <%= lodging.description.try(:html_safe) %>
      </div>
    </div>

    <div class="col-md-6 col-xs-6">
      <h3 class="card-title"><%= t 'nav.amentities' %></h3>
      <hr class="margin-bottom-1x">
      <ul class="list-icon">
        <% @lodging.amenities.each do |amenity| %>
          <i class="material-icons md-14 check_circle text-success"></i> <%= amenity.name %>
        <% end %>
       </ul>
    </div>
  </div>

  <div class="margin-top-2x row leads_homepage">
    <div class="col-md-12 target-section" id="reviews-container">
      <% if @reviews.present? %>
        <div class="col-md-6">
          <h3 class="card-title"><%= t 'nav.reviews' %></h3>
        </div>

        <div class="card-body col-md-6">
          <hr class="margin-bottom-1x">
          <%= render 'reviews/rating', lodging: lodging %>
        </div>

        <div class="col-md-6 padding-top-2x">
          <div class="reviews-container">
            <%= render @reviews %>
          </div>

          <div class="review-paginator">
            <%= paginate @reviews, remote: true, window: 0 %>
          </div>
        </div>
      <% else %>
        <div class="row">
          <div class="card-body col-md-12">
            <h3 class="card-title"><%= t 'nav.reviews' %></h3>
            <p>Accommodation does not have any review yet.</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 leads_homepage padding-bottom-1x">
      <h4 class="mb-3 mt-2">
        <%= t 'usp.acco_show_header', lodging_name: lodging.name, admin_name: lodging.admin_user.try(:first_name) || 'Christa' %>
      </h4>

      <div class="row">
        <div class="col-md-2 col-lg-2">
          <div class="d-table">
            <img class="d-block w-150 mx-auto img-thumbnail rounded-circle mb-3" src="<%= lodging.admin_user.try(:image) || 'https://imagesnice2stayeurope.s3.amazonaws.com/uploads/image/image/5478/chirsta.jpg' %>" alt="Team">
          </div>
        </div>

        <div class="col-md-4 mb-4">
          <p>
            <%= t 'usp.acco_show_p' %><br>
            <%= t('usp.acco_show_visit', lodging_name: lodging.name, admin_name: lodging.admin_user.try(:first_name) || 'Christa').html_safe %>
          </p>
        </div>

        <div class="col-md-3 col-sm-4 col-xs-6 text-center mb-30" >
          <span class="d-block display-4 text-gray-light mb-4">
            <%= image_tag("usp_visit.png", alt: "visit") %>
          </span>

          <h4 class="h5 mb-2"><%= t 'usp.inspect' %></h4>
          <p class="text-muted text-xxxs mb-0">
            <%= @lodging.name %>  <%= t 'usp.inspect_details' %>
          </p>
        </div>

        <div class="col-md-3 col-sm-4 col-xs-6 text-center mb-30">
          <span class="d-block display-4 text-gray-light mb-4">
            <%= image_tag("usp_support.png", alt: "visit") %>
          </span>

          <h5 class="h5 mb-2"><%= t 'usp.price' %></h5>
          <p class="text-muted text-xxxs  mb-0"><%= t 'usp.price_details' %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="padding-bottom-1x pt-2 mb-1 row">
    <div class="col-md-6 padding-top-1x target-section" id="like-container">
      <h3 class="card-title"><%= t 'nav.also_like' %></h3>
      <hr class="margin-bottom-1x">

      <div class="row">
        <%= render @lodgings %>
      </div>
    </div>
  </div>
</div>

