<%= render 'shared/photoswipe' %>

<div class="container-fluid">
  <div class="col-md-12">
    <div class="row target-section" id="home-container">
      <div class="col-md-12 col-xs-12 margin-top-1x">
        
        <div class="gallery-control ">
        <figure itemprop="associatedMedia" itemscope>
          <a itemprop="contentUrl">
            <img src="<%= @lodging.image %>" itemprop="thumbnail" alt="<%= @lodging.name %>" class="w-100 max-image" />
          </a>

          <figcaption itemprop="caption description">
            <input type="button" name="view-photos" value="view photos" class="btn btn-white btn-sm">
          </figcaption>
        </figure>
      </div>

      <div class="lodging-gallery margin-top-1x" itemscope>
        <% @lodging.images.each_with_index do |image_url, index| %>
          <figure itemprop="associatedMedia" itemscope class="d-none">
            <a href="<%= image_url %>" itemprop="contentUrl">
              <img src="<%= image_url %>" itemprop="thumbnail" alt="<%= @lodging.name %>" class="img-fluid img-thumbnail" />
            </a>
            <figcaption itemprop="caption description"><%= index %></figcaption>
          </figure>
        <% end %>
       </div>
     
        <h2 class="margin-top-2x"><%= @lodging.h1 %></h2>
                    <h5>
        <i class="material-icons md-24 stars text-success"></i>&nbsp;<%= @lodging.highlight_1 %>
                <i class="material-icons md-24 stars text-success"></i>&nbsp;<%= @lodging.highlight_2 %>
                <i class="material-icons md-24 stars text-success"></i>&nbsp;<%= @lodging.highlight_3 %>
        </h5>
       

        <div class="row margin-top-1x">
          <div class="col-md-8 margin-bottom-1x">
            <div id="lodging-summary">
              <%= @lodging.summary.try(:html_safe) %>
            
            </div>
          </div>
          <div class="col-md-4">
             <p><%= image_tag("guest") %> <%= @lodging.minimum_adults %> - <%= pluralize @lodging.adults, t('search.guest'), t('search.guests') %>  </p> 
             <p><%= image_tag("bedroom") %> <%= pluralize @lodging.beds, t('search.bedroom'), t('search.bedrooms') %></p>
             <p> <%= image_tag("bathroom") %> <%= pluralize @lodging.baths, t('search.bathroom'), t('search.bathrooms') %></p>


          <% if @reviews.present? %>
           
              <div class="text-left">
                <div class="d-inline align-baseline display-3 mr-1"><%= @lodging.average_rating %></div>
                <br>
                <div class="d-inline align-baseline text-sm text-warning">
                  <%= render_stars_tag @lodging.average_rating %>
                  <p>(<%= pluralize(@lodging.all_reviews.count, 'review', 'reviews') %>)</p>
                
              </div>
            </div>
          <% end %>
          </div>




        <div class="row">
          <div class="col-md-12 ml-2">
          <div class="infobox">
            
            <div class="infobox-header bg-secondary">
              
              <h4>Beschikbaardeid & Prijzen</h4>
              
                <h5 class="margin-bottom-1x">Wanneer wil jij verblijven bij <%= @lodging.name %>?</h5>
           
            </div>
            
            <div class="infobox-content">
               <% if @lodging.as_standalone? %>
                <%= render 'standalone', lodging: @lodging, reservation: @reservation %>
              <% else %>
                <%= render 'parent', lodging: @lodging, reservation: @reservation, lodging_children: @lodging_children %>
              <% end %>
             </div>
      
          </div>


          

          </div>


        </div>





      
      <div class="row">


            <div class="col-lg-6 homepage">
              
                <h4 class="mb-3">
                  <%= t 'usp.vragen_show_header' %> <%= @lodging.name %> ? 
                </h4>

              <div class="row">
                <div class="col-md-3 col-lg-2">
                  <div class="d-table">
                    <img class="d-block w-150 mx-auto img-thumbnail rounded-circle mb-3" src="https://imagesnice2stayeurope.s3.amazonaws.com/uploads/image/image/5478/chirsta.jpg" alt="Team">
                  </div>
                </div>


                <div class="col-sm-9 mb-9">
                  <p><%= @lodging.name %>  <%= t 'usp.acco_show_visit' %></p>
                  <p><%= t 'email.contact_text' %></p> 
               
                    <%= link_to _back_url, class: 'btn btn-white' do %>
                      <i class="material-icons email"></i>&nbsp; Click hier om een vraag te stellen
                    <% end %>
                  </div>
                 

              
                </div>
               </div>

       <div class="col-lg-6">
          <div class="accordion" id="accordion2" role="tablist">
           
              <div class="card-header" role="tab">
                <h6><a href="#collapseFour" data-toggle="collapse"><i class="material-icons drafts"></i><%= t 'information.included_header' %></a></h6>
              </div>

              <div class="collapse" id="collapseFour" data-parent="#accordion2" role="tabpanel">
                <div class="card-body"><%= @lodging.including_text.try(:html_safe) %></div>
              </div>

              <div class="card-header" role="tab">
                <h6><a class="collapsed" href="#collapseFive" data-toggle="collapse"><i class="material-icons person"></i><%= t 'information.informatie_header' %></a></h6>
              </div>
              <div class="collapse" id="collapseFive" data-parent="#accordion2" role="tabpanel">
                <div class="card-body"><%= @lodging.particularities_text.try(:html_safe) %></div>
              </div>

              <div class="card-header" role="tab">
                <h6><a class="collapsed" href="#collapseSeven" data-toggle="collapse"><i class="material-icons person"></i><%= t 'information.extra_service' %></a></h6>
              </div>
              <div class="collapse" id="collapseSeven" data-parent="#accordion2" role="tabpanel">
                <div class="card-body"><%= @lodging.options_text.try(:html_safe) %></div>
              </div>

              <div class="card-header" role="tab">
                <h6><a class="collapsed" href="#collapseSix" data-toggle="collapse"><i class="material-icons monetization_on"></i><%= t 'information.payment_conditions' %></a></h6>
              </div>
              <div class="collapse" id="collapseSix" data-parent="#accordion2" role="tabpanel">
                <div class="card-body"><%= @lodging.payment_terms_text.try(:html_safe) %></div>
              </div>
          
           </div>
            </div>
          </div>
        </div>
        </div>

        <%= render 'shared_content', lodging: @lodging %>
      </div>
    </div>
  </div>
</div>

<%= render 'shared/meta_tags', resource: @lodging %>

<%= content_for :js_init do %>
  GuestDropdown.init();
  Lodging.read_more()
  initPhotoSwipeFromDOM('.lodging-gallery');
  initDatePicker();
  Invoice.init();
  Lodging.child_form();
  Lodging.highlight_menu();
  OwlCarousel.init();
  Map.init_with('<%= @lodging.to_json(methods: [:feature], only: []) %>', 'lodging-map-location');
  Invoice.calculate(<%= calculation_ids @lodging %>);
<% end %>
