<% content_for :body_class, "pr-3" %>

<div class="row">
  <div id="loader">
    <%= image_tag 'loader.gif', class: 'w-50' %>
  </div>

  <div class="col-md-2 homepage col-sm-8 search-filters pr-0">
    <%= render 'filters', lodgings: @lodgings, amenities: @amenities, experiences: @experiences %>
  </div>

  <div class="col-lg-7 col-sm-8">
    <div class="row">
      <div class="col-md-12 ">
        <div class="row mb-2 lodgings-list" id="lodgings-list">
          <%= render 'lodgings_list', lodgings: @lodgings %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-3 col-sm-4 fixed-map d-none d-sm-block">
    <%= tag.div nil, id: 'map' %>
  </div>
</div>

<div class="pagination d-none">
  <%= paginate @lodgings, remote: true %>
</div>

<%= content_for :js_init do %>
  Lodging.init();
  Map.init();
  $('#loader').hide();
  InfiniteScroll.init();
<% end %>

<%= content_for :footer_class do 'd-none' end %>
