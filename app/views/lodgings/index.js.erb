<% if params[:page].blank? %>
  $('.lodgings-list').html("<%= j render 'lodgings_list', lodgings: @lodgings, regions: @regions %>");
<% else %>
  $('.lodgings-list').append("<%= j render 'lodgings_list', lodgings: @lodgings, regions: @regions %>");
<% end  %>

<% if @lodgings.next_page %>
  $('.pagination').replaceWith('<%= j paginate @lodgings %>');
  $('.pagination').addClass('d-none');
<% else %>
  $('.pagination').remove();
<% end %>

Map.add_markers();
Map.highlight_lodgings();
Url.update("<%= lodgings_path(locale: locale) %>");
$('#loader').hide();
$('.lodgings-heading').html("<%= j page_entries_info(@lodgings, entry_name: 'Lodging' ) %>");
$('.search-filters').html("<%= j render 'filters', lodgings: @lodgings, amenities: @amenities, experiences: @experiences %>");
Lodging.init();
