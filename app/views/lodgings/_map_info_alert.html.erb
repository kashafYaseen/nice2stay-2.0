<div class="col-md-12 secondary-navbar">
  <div class="row">
    <div class="col-md-3">
      <span class="text-xs text-bold">
        <%= page_entries_info(@lodgings, entry_name: 'Lodging' ) %>
      </span>
    </div>

    <div class="offset-md-3 col-md-4">
      View:
      <a class="text-decoration-none mr-0 list-view layout-btn btn-outline-secondary">
        <span class="title">Grid</span>
      </a>

      <a class="text-decoration-none mr-0 list-and-map layout-btn d-none d-sm-inline-block">
        <span class="title">Split</span>
      </a>

      <a class="text-decoration-none mr-0 map-view layout-btn">
        <span class="title">Map</span>
      </a>
    </div>

    <div class="col-md-2">
      <div class="price-dropdown dropdown">
        <a class="dropdown-toggle w-100 text-decoration-none" type="button" id="PriceSortFilter" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <span class="title"><%= render_sort_text %></span>
          <i class="material-icons sort"></i>
        </a>

        <div class="dropdown-menu sorting-dropdown-menu" aria-labelledby="PriceSortFilter">
          <a class="dropdown-item lowest-price" href="#"><%= t 'sorting.low_high' %></a>
          <a class="dropdown-item highest-price" href="#"><%= t 'sorting.high_low' %></a>
          <a class="dropdown-item highest-rating" href="#"><%= t 'sorting.high_rating' %></a>
          <a class="dropdown-item newest" href="#"><%= t 'sorting.new' %></a>
          <a class="dropdown-item default" href="#"><%= t 'sorting.default' %></a>
          <%= hidden_field_tag :order, params[:order] %>
        </div>
      </div>
    </div>
  </div>
</div>

<% if collection.present? %>
  <div class="col-lg-12 p-3">
    <div class="card">
      <div class="card-body bg-white">
        <div class="row">
          <div class="col-12 my-auto">
            <h5 class="card-title"><%= t 'collection.inspiration' %></h5>

            <% collection.each do |custom_text| %>
              <%= link_to "#{custom_text.menu_title}", seo_url(custom_text.seo_path, query_params.to_query), class: 'tag' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="col-lg-12 p-3">
    <div class="card">
      <div class="card-body bg-white">
        <div class="row">
          <div class="col-12">
            <p class="text-bold">
              <i class="material-icons info_outline medium mr-2"></i>
              <%= render_search_info %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
