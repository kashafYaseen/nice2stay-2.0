  <body class="email">
  <!-- HEADER -->
    <table class="head-wrap">
      <tr>
        <td class="header container">
          <div class="content">
            <table>
              <tr>
                <td class="logo">
                  <%= link_to root_url do %>
                    <%= image_tag 'https://www.nice2stay.com/assets/site-logo-619c61c0e09a6d1cf8b3f68a9124e37247deb66f89fc5e5b30965d862eab8cf0.png' %>
                  <% end %>
                </td>
              </tr>
            </table>
          </div>
        </td>
      </tr>
    </table>
    <!-- /HEADER -->

    <!-- BODY -->
    <table class="body-wrap mt-3">
      <tr>
        <td class="container">
          <div class="content">
            <table class="body bg-light">
              <tr>
                <td>
                  <%= yield %>
                </td>
              </tr>
            </table>
          </div>
        </td>
      </tr>
    </table>
    <!-- /BODY -->

    <!-- FOOTER -->
    <table class="footer-wrap">
      <tr>
        <td class="container">
          <div class="content">
            <table>
              <tr>
                <td align="center" class="m-3">
                  <p>
                    <%= link_to "Nice2stay Â© copyright #{Date.current.year}", root_url, class: 'nav-item' %>
                  </p>
                </td>

                <td align="center" class="m-3">
                  <p>
                    <%= link_to 'Home', root_url, class: 'nav-item' %>
                  </p>
                </td>

                <td align="center" class="m-3">
                  <p>
                    <%= link_to 'About', page_url('over-ons'), class: 'nav-item' %>
                  </p>
                </td>

                <td align="center" class="m-3">
                  <p>
                    <%= link_to 'Contact', page_url('contact'), class: 'nav-item' %>
                  </p>
                </td>
              </tr>
            </table>
          </div>
        </td>
      </tr>
    </table>
  <!-- /FOOTER -->
  </body>
</html>
